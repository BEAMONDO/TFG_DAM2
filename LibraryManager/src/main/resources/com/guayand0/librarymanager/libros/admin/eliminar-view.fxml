<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.guayand0.librarymanager.controller.libros.admin.EliminarController">

    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>

    <VBox alignment="CENTER" spacing="15">

        <HBox alignment="CENTER" spacing="5">
            <VBox>
                <Label minWidth="100" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Libro" />
                <ComboBox fx:id="libroComboEliminar" minWidth="290" prefHeight="40" style="-fx-font-size: 14px;"/>
            </VBox>

            <Region prefWidth="50" />

            <VBox alignment="CENTER" minWidth="290.0" >
                <Region VBox.vgrow="ALWAYS"/>
                <Button onAction="#onDeleteClick" text="Eliminar" minWidth="180" style="-fx-font-size: 20px; -fx-background-color: red; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 10 10 10;" />
                <Region VBox.vgrow="ALWAYS"/>
            </VBox>
        </HBox>
    </VBox>
</VBox>
