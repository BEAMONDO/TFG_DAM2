<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <VBox spacing="15" alignment="CENTER">

        <HBox spacing="5" alignment="CENTER">
            <VBox>
                <Label text="DNI" minWidth="100" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <ComboBox fx:id="dniCombo" editable="true" minWidth="290" prefHeight="40" style="-fx-font-size: 14px;" />
            </VBox>
        </HBox>

        <HBox spacing="5" alignment="CENTER">
            <Button text="Eliminar" minWidth="180" style="-fx-font-size: 20px; -fx-background-color: red; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 10 10 10;" />
        </HBox>

    </VBox>
</VBox>
