<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.guayand0.librarymanager.controller.autores.admin.EliminarController">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <VBox alignment="CENTER" spacing="15">

        <HBox spacing="5" alignment="CENTER">
            <VBox>
                <Label text="Nombre completo" minWidth="100" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <ComboBox fx:id="nombreCompletoCombo" minWidth="290" prefHeight="40" style="-fx-font-size: 14px;" />
            </VBox>

            <Region prefWidth="50" />

            <Button onAction="#onDeleteClick" text="Eliminar" minWidth="180" style="-fx-font-size: 20px; -fx-background-color: red; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 10 10 10;" />
        </HBox>

    </VBox>
</VBox>
